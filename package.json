{
  "name": "pupparazzi",
  "version": "2.0.0",
  "description": "Challenge to learn server side rendering and callbacks",
  "main": "index.js",
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "scripts": {
    "start": "node server/index",
    "dev": "nodemon server/index --ignore */data.json",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "test": "jest --watchAll",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "homepage": "https://github.com/dev-academy-challenges/pupparazzi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-academy-challenges/pupparazzi.git"
  },
  "bugs": {
    "url": "https://github.com/dev-academy-challenges/pupparazzi/issues"
  },
  "eslintConfig": {
    "extends": [
      "@devacademy",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "data.json"
    ]
  },
  "dependencies": {
    "express": "^4.17.2",
    "express-handlebars": "^6.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^29.2.2",
    "jsdom": "^20.0.0",
    "nodemon": "^2.0.15",
    "prettier": "2.6.1",
    "supertest": "^6.2.2",
    "@devacademy/eslint-config": "^1.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
